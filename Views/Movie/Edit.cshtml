@model MovieSystem.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-5" style="max-width: 700px;">
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <h2 class="text-center mb-4">✏️ Edit Movie</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Genre</label>
                    <input asp-for="Genre" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Release Year</label>
                    <input asp-for="ReleaseYear" class="form-control" type="number" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-warning w-100 py-2">Update Movie</button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">← Back to Movies</a>
            </div>
        </div>
    </div>
</div>
