@model MovieSystem.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg">
        <div class="card-body">
            <h3 class="text-center mb-4">Confirm Delete</h3>
            <p>Are you sure you want to delete the movie: <strong>@Model.Title</strong>?</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 mb-2">Yes, Delete</button>
            </form>

            <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
        </div>
    </div>
</div>
