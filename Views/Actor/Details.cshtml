@model MovieSystem.Models.Actor

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow"
                 style="width:100%;height:auto;object-fit:cover;" />
        </div>

        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Bio:</strong> @Model.Bio</p>

            <!-- زر إضافة فيلم -->
            <a href="/Actor/AddMovie/@Model.Id" class="btn btn-primary mt-3 mb-4">
                ➕ Add Movie
            </a>

            <h3 class="mt-4">Movies Participated In 🎬</h3>

            @if (Model.Movies != null && Model.Movies.Any())
            {
                <div class="row">
                    @foreach (var movie in Model.Movies)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card shadow-sm">
                                <img src="@movie.ImageUrl" class="card-img-top"
                                     style="height:200px;object-fit:cover;" />

                                <div class="card-body">
                                    <h5 class="card-title">@movie.Title</h5>
                                    <p class="card-text"><strong>Genre:</strong> @movie.Genre</p>
                                    <p class="card-text"><strong>Year:</strong> @movie.ReleaseYear</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No movies found for this actor.</p>
            }
        </div>
    </div>
</div>
