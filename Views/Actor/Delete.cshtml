@model MovieSystem.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container mt-4">
    <h2 class="text-center text-danger mb-4">Delete Actor</h2>

    <div class="card shadow-sm p-4">

        <h4 class="mb-3">Are you sure you want to delete this actor?</h4>

        <div class="d-flex align-items-center mb-3">
            <img src="@Model.ImageUrl" style="width:120px;height:160px;object-fit:cover;" class="rounded shadow-sm me-3" />
            <div>
                <h5>@Model.Name</h5>
                <p class="text-muted">Age: @Model.Age</p>
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger w-100 mb-2">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
        </form>

    </div>
</div>
